{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2018",
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDirs": ["src", "tests"],
    "baseUrl": "src",
    "types": [],
    "paths": {
      "@/tests/*": ["../tests/*"],
      "@/*": ["*"]
